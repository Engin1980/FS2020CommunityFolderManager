<Window x:Class="CommunityManager.Windows.AddonOverview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommunityManager.Windows"
        xmlns:converters="clr-namespace:CommunityManager.Converters"
        mc:Ignorable="d"
        Title="AddonOverview" Height="450" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
  <Window.Resources>
    <converters:TagToBackgroundConverter x:Key="TagToBackgroundConverter" />
  </Window.Resources>
  <DockPanel>
    <DockPanel>
      <DockPanel DockPanel.Dock="Top" LastChildFill="False">
        <Button x:Name="btnCustomTitle" DockPanel.Dock="Left" Template="{StaticResource ButtonStyle}" 
                    Content="Custom Title" Click="btnCustomTitle_Click" />
        <Button x:Name="btnAssignTags"  DockPanel.Dock="Left" Template="{StaticResource ButtonStyle}" 
                    Content="Assing Tags" Click="btnAssignTags_Click"/>

        <Button x:Name="btnClose" Content="Close" DockPanel.Dock="Right" Margin="2"  Padding="8" 
                Template="{StaticResource ButtonStyle}" 
              Click="btnClose_Click"/>
        <Button x:Name="btnSave" Content="Save" DockPanel.Dock="Right" Margin="2"  Padding="8" 
                Template="{StaticResource ButtonStyle}" 
              Click="btnSave_Click"/>
        <Button x:Name="btnLoad" Content="Reload" DockPanel.Dock="Right" Margin="2" Padding="8"  
                Template="{StaticResource ButtonStyle}" 
              Click="btnLoad_Click"/>
      </DockPanel>
      <ListView x:Name="lstAddonStates" ItemsSource="{Binding}">
        <ListView.Template>
          <ControlTemplate>
            <ScrollViewer>
              <ItemsPresenter></ItemsPresenter>
            </ScrollViewer>
          </ControlTemplate>
        </ListView.Template>
        <ListView.ItemTemplate>
          <DataTemplate>
            <StackPanel>
              <StackPanel Margin="8" Orientation="Horizontal">
                <TextBlock>
                  <Label x:Name="lblDisplayTitle"  FontWeight="Bold"
                          MouseDoubleClick="lblDisplayTitle_MouseDoubleClick" Margin="0" Padding="0"
                          Tag="{Binding Addon.Folder}" >
                    <Label.Content>
                      <TextBlock Text="{Binding DisplayTitle}"/>
                    </Label.Content>
                  </Label>
                  <Label Margin="0" Padding="0">
                    <Label.Content>
                      <StackPanel Orientation="Horizontal">
                        <TextBlock Text=" .\" />
                        <TextBlock Text="{Binding Addon.Folder}" />  
                      </StackPanel>
                    </Label.Content>
                  </Label>
                  <Label Margin="8 0 0 0" Padding="0">
                    <Label.Content>
                      <StackPanel Orientation="Horizontal">
                        <TextBlock Text="from" />
                        <TextBlock Text="{Binding DisplayCreator}" />
                      </StackPanel>
                      </Label.Content>
                  </Label>
                </TextBlock>
              </StackPanel>
              <StackPanel x:Name="pnlTags" Orientation="Horizontal" Margin="32 0 0 0">
                <ItemsControl ItemsSource="{Binding State.Tags}" >
                  <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                      <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                  </ItemsControl.ItemsPanel>
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <Border BorderBrush="#FF000000" 
                                    Background="{Binding Converter={StaticResource TagToBackgroundConverter}}" 
                                    BorderThickness="1" CornerRadius="8" Margin="2" Padding="8 2 8 2"
                                    HorizontalAlignment="Center">
                        <Label x:Name="lblTag" Content="{Binding}" MouseDoubleClick="lblTag_MouseDoubleClick" 
                               Margin="0" Padding="0"
                               Tag="{Binding DataContext.Addon.Folder, ElementName=pnlTags}"/>
                      </Border>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </StackPanel>
            </StackPanel>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </DockPanel>
  </DockPanel>
</Window>
