<Application x:Class="CommunityManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CommunityManager"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <Style TargetType="Window">
      <Setter Property="FontSize" Value="16" />
      <Setter Property="FontFamily" Value="Anonymous Pro" />
    </Style>
    <ControlTemplate x:Key="ButtonStyle"  TargetType="Button">
      <Border 
        BorderBrush="Black" BorderThickness="1" CornerRadius="8" 
        Margin="2" Padding="4" Background="LightGray" >
        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
      </Border>
    </ControlTemplate>
  </Application.Resources>
</Application>
